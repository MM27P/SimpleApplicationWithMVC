@model SimpleApplicationWithMVC.Models.IndexModelView

@{
    ViewBag.Title = "Index";
}

<h2>Book List</h2>

<p>
    @Html.ActionLink("AddBook", "Create")
</p>

<p>
    User:  @Html.DisplayFor(model => model.UserName)
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.books[0].Author.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.books[0].Author.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.books[0].Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.books[0].ReleaseDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.books[0].Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.books)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Author.Id)
            </td>
            <td>
                Author Name
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Reserve", "Reserve", new { id = item.Id }) |
                @Html.ActionLink("Reservation List", "Reservations", new { id = item.Id })
            </td>
        </tr>
    }

</table>
